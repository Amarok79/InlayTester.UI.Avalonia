<Window
    x:Class="InlayTester.UI.Shell.ShellWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:v="clr-namespace:InlayTester.UI.Shell"
    Name="RootShellWindow"
    x:DataType="v:ShellWindowViewModel"
    Width="1024"
    Height="768"
    CanResize="False"
    SystemDecorations="None"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <ContentControl
        Margin="{Binding #RootShellWindow.OffScreenMargin}"
        Content="{x:Type v:ShellViewModel}">
    </ContentControl>

</Window>
