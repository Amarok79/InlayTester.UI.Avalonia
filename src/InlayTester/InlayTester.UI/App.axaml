<Application
    x:Class="InlayTester.App"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:a="http://schemas.actiprosoftware.com/avaloniaui"
    xmlns:g="using:ActiproSoftware.UI.Avalonia.Themes.Generation"
    xmlns:i="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
    RequestedThemeVariant="Dark">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="avares://InlayTester.UI.Controls/Controls.axaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

    <Application.Styles>
        <a:ModernTheme>
            <a:ModernTheme.Definition>
                <g:ThemeDefinition
                    BaseFontSize="15"
                    ButtonAppearanceKind="Solid"
                    UserInterfaceDensity="Spacious">
                </g:ThemeDefinition>
            </a:ModernTheme.Definition>
        </a:ModernTheme>

        <i:MaterialIconStyles />

        <StyleInclude Source="/Styles/InlayTester.axaml" />
    </Application.Styles>

</Application>
